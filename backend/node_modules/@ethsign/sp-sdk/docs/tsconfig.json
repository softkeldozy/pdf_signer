{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "declarationMap": true,
        "declaration": true,
        "composite": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "rootDir": "../",
        "resolveJsonModule": true,
        "target": "esnext",
        "module": "esnext",
    },
    "include": [
        "../docs/**/*",
        "../src/**/*",
    ]
}